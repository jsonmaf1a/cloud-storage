{
    "name": "@cloud/api",
    "description": "cloud storage api",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "db": "docker compose up",
        "maildev": "maildev",
        "build": "nest build",
        "start": "nest start",
        "dev": "pnpm run db & pnpm run maildev & nest start --watch",
        "lint:ts": "tsc --noEmit",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "biome lint --error-on-warnings ./src",
        "seed:run": "ts-node -r tsconfig-paths/register -P ./tsconfig.json ./src/database/seeds/run-seed.ts",
        "typeorm": "env-cmd ts-node -r tsconfig-paths/register -P ./tsconfig.json ./node_modules/typeorm/cli.js",
        "migration:generate": "npm run typeorm -- --dataSource=src/database/data-source.ts migration:generate",
        "migration:create": "npm run typeorm -- migration:create",
        "migration:run": "npm run typeorm -- --dataSource=src/database/data-source.ts migration:run",
        "migration:revert": "npm run typeorm -- --dataSource=src/database/data-source.ts migration:revert",
        "postmigration:generate": "npm run lint",
        "schema:drop": "npm run typeorm -- --dataSource=src/database/data-source.ts schema:drop"
    },
    "dependencies": {
        "@cloud/shared": "workspace:*",
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^3.3.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/mapped-types": "*",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/swagger": "^8.0.4",
        "@nestjs/typeorm": "^10.0.2",
        "@ts-rest/core": "^3.51.0",
        "@ts-rest/nest": "^3.51.0",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "handlebars": "^4.7.8",
        "ms": "^2.1.3",
        "nestjs-i18n": "^10.4.9",
        "nestjs-zod": "^4.2.0",
        "nodemailer": "^6.9.16",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pg": "^8.13.1",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.20",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^5.0.0",
        "@types/ms": "^0.7.34",
        "@types/node": "^20.17.6",
        "@types/nodemailer": "^6.4.16",
        "@types/passport-jwt": "^4.0.1",
        "@types/passport-local": "^1.0.38",
        "@types/supertest": "^6.0.0",
        "env-cmd": "^10.1.0",
        "prettier": "^3.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "tslib": "^2.8.1",
        "typescript": "^5.6.3"
    },
    "license": "GPL-3.0-only",
    "author": "jsonmaf1a"
}
